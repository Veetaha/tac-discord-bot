{
    "name": "basic-ts-nodejs-template",
    "version": "1.0.0",
    "description": "Basic template project to start programming with TypeScript and NodeJS",
    "main": "build/backend/app.ts",
    "scripts": {
        "dev": "cd backend && ts-node-dev --respawn -r tsconfig-paths/register app.ts",
        "start": "cd backend && ts-node -r tsconfig-paths/register app.ts",
        "start:debug": "cd backend && node -r ts-node/register -r tsconfig-paths/register --nolazy --inspect app.ts",
        "test": "cd backend && mocha -r ts-node/register -r tsconfig-paths/register tests/run-all.ts",
        "update-deps": "ncu -u && npm install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Veetaha/basic-ts-nodejs-template.git"
    },
    "keywords": [
        "template",
        "typescript",
        "nodejs"
    ],
    "author": "Veetaha",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Veetaha/basic-ts-nodejs-template/issues"
    },
    "homepage": "https://github.com/Veetaha/basic-ts-nodejs-template#readme",
    "devDependencies": {
        "@types/chai": "latest",
        "@types/dotenv": "latest",
        "@types/lodash": "latest",
        "@types/mathjs": "latest",
        "@types/mocha": "latest",
        "@types/node": "latest",
        "chai": "latest",
        "mocha": "latest",
        "nodemon": "latest",
        "npm-check-updates": "latest",
        "ts-node-dev": "latest",
        "tslint": "latest",
        "typescript": "^3.5.0-dev.20190416"
    },
    "dependencies": {
        "colors": "latest",
        "dotenv": "latest",
        "joi": "latest",
        "lodash": "latest",
        "mathjs": "latest",
        "reflect-metadata": "latest",
        "ts-node": "latest",
        "ts-typedefs": "latest",
        "tsconfig-paths": "latest",
        "typesafe-joi": "latest"
    }
}
