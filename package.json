{
    "name": "tac-discord-bot",
    "version": "1.0.0",
    "description": "Discord bot for Times are Changing UE4 game Discord server.",
    "main": "build/backend/app.ts",
    "scripts": {
        "backend:container:start": "(cd backend && ts-node --transpile-only -r tsconfig-paths/register app.ts)",
        "backend:container:dev": "(cd backend && ts-node-dev --respawn -r tsconfig-paths/register --inspect=0.0.0.0:9229 -- app.ts)",
        "start": "docker-compose run --rm --service-ports tac-discord-bot",
        "dev": "docker-compose --file debug.docker-compose.yml run --rm --service-ports tac-discord-bot-debug",
        "test": "cd backend && mocha -r ts-node/register -r tsconfig-paths/register tests/run-all.ts",
        "modules-graph": "madge --warning --dot -i modules-graph.svg backend/app.ts",
        "bump-deps:major:dry-run": "ncu",
        "bump-deps:major": "ncu -u && npm i",
        "bump-deps:minor:dry-run": "ncu --semverLevel major",
        "bump-deps:minor": "ncu -u --semverLevel major && npm i"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Veetaha/tac-discord-bot.git"
    },
    "keywords": [
        "template",
        "typescript",
        "nodejs"
    ],
    "author": "Veetaha",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Veetaha/tac-discord-bot/issues"
    },
    "homepage": "https://github.com/Veetaha/tac-discord-bot#readme",
    "devDependencies": {
        "@types/chai": "latest",
        "@types/dotenv": "latest",
        "@types/gm": "^1.18.7",
        "@types/humanize-duration": "^3.18.0",
        "@types/lodash": "latest",
        "@types/mathjs": "latest",
        "@types/mocha": "latest",
        "@types/moment-duration-format": "^2.2.2",
        "@types/ndarray": "^1.0.7",
        "@types/nested-error-stacks": "^2.1.0",
        "@types/node": "latest",
        "@types/uuid": "^3.4.6",
        "@types/yup": "^0.26.27",
        "chai": "latest",
        "madge": "^3.6.0",
        "mocha": "latest",
        "npm-check-updates": "latest",
        "ts-node-dev": "latest",
        "tslint": "latest",
        "typescript": "^3.7.4"
    },
    "dependencies": {
        "@hapi/joi": "^16.1.8",
        "axios": "^0.19.0",
        "canvas": "^2.6.1",
        "colors": "latest",
        "dinky.js": "^0.8.1",
        "discord.js": "^11.5.1",
        "dotenv": "latest",
        "erlpack": "github:hammerandchisel/erlpack",
        "ffmpeg": "0.0.4",
        "ffmpeg-static": "^3.0.0",
        "get-pixels": "^3.3.2",
        "gif-encoder": "^0.7.2",
        "gif-extract-frames": "^1.0.2",
        "gif-frames": "^1.0.1",
        "gifencoder": "^2.0.1",
        "gm": "^1.23.1",
        "humanize-duration": "^3.21.0",
        "iter-tools": "^6.2.6",
        "lodash": "latest",
        "lodash-decorators": "^6.0.1",
        "moment": "^2.24.0",
        "moment-duration-format": "^2.3.2",
        "multi-integer-range": "^4.0.8",
        "node-opus": "^0.3.3",
        "reflect-metadata": "latest",
        "rxjs": "^6.5.4",
        "save-pixels": "^2.3.4",
        "sodium": "^3.0.2",
        "ts-nested-error": "^1.1.2",
        "ts-node": "latest",
        "ts-not-nil": "^1.0.1",
        "ts-typedefs": "^3.2.0",
        "tsconfig-paths": "latest",
        "typedi": "^0.8.0",
        "typesafe-joi": "latest",
        "typescript-collections": "^1.3.3",
        "uuid": "^3.3.3",
        "ytdl-core": "^1.0.5",
        "yup": "^0.28.0"
    }
}
